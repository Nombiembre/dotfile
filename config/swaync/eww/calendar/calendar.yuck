
(defwidget cal []
  (box :class "cal-box"
       :orientation "v"
       :space-evenly false
    (calendar :class "cal"
              :day {formattime(EWW_TIME, "%d")}
              :month {formattime(EWW_TIME, "%m")}
              :year {formattime(EWW_TIME, "%Y")}
  )
  
  (box :orientation "h"
       :class "alarm-box"
       :space-evenly true
       :spacing 40
        (eventbox :cursor "pointer"
						 (button :class "alarm"
								 :tooltip "Open alarm"
								 :onclick "OpenApps --alarm" "ó°€ "))
         ))
)

